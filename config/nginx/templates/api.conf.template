server {
    listen 80;
    server_name ${API_DOMAIN};
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    http2 on;
    server_name ${API_DOMAIN};
    include /etc/nginx/snippets/ssl.conf;
    include /etc/nginx/snippets/security.conf;

    location / {
        proxy_pass http://api:80;
    }

    location = /robots.txt {
        alias /usr/share/nginx/html/no-ai.txt;
    }
}
